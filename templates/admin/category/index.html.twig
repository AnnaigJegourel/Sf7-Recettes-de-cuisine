{% extends "admin/admin.html.twig" %}

{% block title "Catégories" %}

{% block body %}

    <p>
        <a class="btn btn-primary" href="{{ path("admin.category.create") }}">Ajouter une catégorie</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path("admin.category.edit", {id: category.id}) }}">Editer</a>
                </td>
                <td>
                    <div class="d-flex gap-1">
                        <a class="btn btn-primary" href="{{ path("admin.category.edit", {id: category.id}) }}">Editer</a>
                        <form action="{{ path("admin.category.delete", {id: category.id}) }}" method="post"></form>
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger" type="submit">Supprimer</button>
                    </div>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}